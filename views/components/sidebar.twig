{# do_action( 'before_sidebar' ) #}
{% if not dynamic_sidebar( 'sidebar-1' ) ) %}
<div class="sidebar">
	<aside id="search" class="widget widget--search">
		{# get_search_form() #}
	</aside>

	<aside id="archives" class="widget">
		<h3 class="widget__title">{# _e( 'Archives', 'bioscience' ); #}</h3>
		<ul>
			{# wp_get_archives( array( 'type' => 'monthly' ) ) #}
		</ul>
	</aside>

	<aside id="meta" class="widget">
		<h3 class="widget__title">{# _e( 'Meta', 'bioscience' ); #}</h3>
		<ul>
			{# wp_register() #}
			<li>{# wp_loginout() #}</li>
			{# wp_meta() #}
		</ul>
	</aside>
</div>
{% endif %}
