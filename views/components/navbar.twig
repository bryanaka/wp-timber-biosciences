<nav class="navbar navbar-default navbar--green" role="navigation">
  	<!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
  	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".mainNav">
  		<span class="sr-only">Toggle navigation</span>
  		<span class="icon-bar"></span>
  		<span class="icon-bar"></span>
  		<span class="icon-bar"></span>
  	</button>
  	<a class="navbar-brand" href="/">Physical Biosciences</a>
  </div>

  <div class="collapse navbar-collapse mainNav">
    <ul class="nav navbar-nav">
      {% for item in navigation.primary.get_items %}
        {% if item.get_children %}
          <li class="mainNav__link dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="{{item.get_path}}">{{item.title}} <b class="caret"></b></a>
            <ul class="dropdown-menu">
              {% for child in item.get_children %}
                <li class="nav-drop-item"><a href="{{child.url}}">{{child.title}}</a></li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li class="mainNav__link"><a href="{{item.get_path}}">{{item.title}}</a></li>
        {% endif %}
      {% else %}
        <li>No Primary Menu Selected</li>
      {% endfor %}
    </ul>
  </div>

</nav>