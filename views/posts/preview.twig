<article class="tease tease--{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h2 class="h2"><a href="{{post.get_path}}">{{post.title}}</a></h2>
		<p>{{ post.get_preview(1000) }}</p>

		{% if post.get_thumbnail %}
			<img src="{{ post.get_thumbnail.get_url|resize(320, 320) }}" />
		{% endif %}
	{% endblock %}
</article>
