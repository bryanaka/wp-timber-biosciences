<div class="row">
	<article id="post-{{post.ID}}" class="post post--{{post.post_type}} col-sm-8">
		<header class="post__header">
			<h1 class="post__title">
				<a href="{{post.permalink}}" rel="bookmark" class="post__title__link">{{post.title}}</a>
			</h1>
			<?php if ( 'post' == get_post_type() ) : ?>
				<div class="post__meta">
					<?php bioscience_posted_on(); ?>
				</div>
			<?php endif; ?>
		</header>
	
		<?php if ( is_search() ) : // Only display Excerpts for Search ?>
			<div class="post__summary">
				<?php the_excerpt(); ?>
			</div>
		<?php else : ?>
			<div class="post__content">
				<?php the_content( __( 'Continue reading <span class="meta-nav">&rarr;</span>', 'bioscience' ) ); ?>
				<?php
					wp_link_pages( array(
						'before' => '<div class="page-links">' . __( 'Pages:', 'bioscience' ),
						'after'  => '</div>',
					) );
				?>
			</div>
		<?php endif; ?>
	
		<footer class="post__meta">
			<?php if ( 'post' == get_post_type() ) : // Hide category and tag text for pages on Search ?>
				<?php
					/* translators: used between list items, there is a space after the comma */
					$categories_list = get_the_category_list( __( ', ', 'bioscience' ) );
					if ( $categories_list && bioscience_categorized_blog() ) :
				?>
						<span class="post__categories">
							<?php printf( __( 'Posted in %1$s', 'bioscience' ), $categories_list ); ?>
						</span>
					<?php endif; // End if categories ?>
	
				<?php
					/* translators: used between list items, there is a space after the comma */
					$tags_list = get_the_tag_list( '', __( ', ', 'bioscience' ) );
					if ( $tags_list ) :
				?>
						<span class="post__tags">
							<?php printf( __( 'Tagged %1$s', 'bioscience' ), $tags_list ); ?>
						</span>
					<?php endif; // End if $tags_list ?>
			<?php endif; // End if 'post' == get_post_type() ?>
	
			<?php if ( ! post_password_required() && ( comments_open() || '0' != get_comments_number() ) ) : ?>
				<span class="post__comments"><?php comments_popup_link( __( 'Leave a comment', 'bioscience' ), __( '1 Comment', 'bioscience' ), __( '% Comments', 'bioscience' ) ); ?></span>
			<?php endif; ?>
	
			<?php edit_post_link( __( 'Edit', 'bioscience' ), '<span class="edit-link">', '</span>' ); ?>
		</footer>
	</article>
</div>