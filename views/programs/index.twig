{% extends 'layout/base-grid.twig' %}

{% block content %}
	<div class="row">
		<h1 class="col-xs-12 page__header">{{page.title}}</h1>
		<article class="col-xs-12 page__content">
			{{page.content}}
		</article>
	</div>
	<div class="row">
		{% for child in page.get_children %}
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="card-container--full">
					<article class="card--full">
						<h2 class="card__title"><a href="{{child.get_path}}">{{child.post_title}}</a></h2>
						{{child.get_preview(50)}}
					</article>
				</div>
			</div>
		{% else %}
			No Children
		{% endfor %}
	</div>
{% endblock %}
