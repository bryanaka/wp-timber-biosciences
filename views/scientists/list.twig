{% extends "layout/base-grid.twig" %}
{% block content %}
	<div class="row">
		<h1 class="small-12 columns page__header">{{page.title}}</h1>
		<article class="small-12 columns page__content">
			{{page.content}}
		</article>
		<article class="small-12 columns">
			{% for letter in 'A'..'Z' %}
				<span class="letterNav"><a href="#section-{{letter|lower}}">{{letter}}</a></span>
			{% endfor %}
		</article>
	</div>
	{% for letter, grouped in scientists %}
		<div class="row">
			<h2 class="small-12 columns scientist__letter" id="section-{{letter|lower}}">{{ letter }}</h2>
			<hr class="scientist__divider">
		</div>
		<ul class="scientist_list">
			{% for scientist in grouped %}
				{% include [scientist.post_type~'/preview.twig', 'posts/preview.twig'] %}
			{% endfor %}
		</ul>
	{% endfor %}
{% endblock %}
