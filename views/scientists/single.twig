{% extends 'layout/base.twig' %}
{% block content %}

<section class="profile__head clearfix" style="">
	<div class="profile__name col-xs-12">
		<h1>{{scientist.title}}</h1>
	</div>
	<figure class="col-sm-4">
		<img src="{{scientist.get_thumbnail.src}}"
		     alt="{{scientist.get_thumbnail.caption}}"
		     class="profile__img">
	</figure>

	{# This needs to be associated to scientist__titles model #}
	<article class="profile__titles col-sm-4 hidden-xs">
			<ul>
				{% for title in scientist.titles %}
					<li>{{title}}</li>
				{% else %}
					no titles
				{% endfor %}
			</ul>
	</article>
	<article class="profile__websites col-sm-4 hidden-xs">
		<h4>Websites:</h4>
		<ul>
			{% for website in scientist.websites %}
				<li><a href="{{url}}">{{name}}</a></li>
			{% else %}
				no websites
			{% endfor %}
		</ul>
	</article>
</section>
<section class="profile__contact col-sm-4 col-xs-12 row">

	<article class="profile__address col-xs-6 col-sm-12">
		<h2>Location Information</h2>
		{{scientist.department_name}}<br>
		{{scientist.address1}}<br>
		{{scientist.address2}}<br>
		{{scientist.city}}, {{scientist.state}} {{scientist.zip_code}} USA
	</article>

	<article class="profile__location col-xs-6 col-sm-12 ">
		<h2>Contact Information</h2>
		Primary Number: {{scientist.phone1}}<br>
		{% if scientist.phone2_type != 'null' %}
			{{scientist.phone2_type}}: {{scientist.phone2}}<br>
		{% endif %}
		E-Mail: <a href="mailto:{{scientist.email}}">{{scientist.email}}</a><br>
	</article>

</section>

<section class="profile__bio col-sm-8 col-xs-12">

	<article class="profile__emphasis">
		<h2>Research Emphasis:</h2>
		<p>
			{{scientist.emphasis}}
		</p>
	</article>

	{% if profile.summary %}
	<article id="scientist__summary" class="profile__summary">
		<h2>Summary:</h2>
		<p>
			{{scientist.summary}}
		</p>
	</article>
	{% endif %}

</section>
<style>
	
.profile__img {
	padding: 3px;
	border: #252525 2px solid;
	max-width: 175px;
	min-width: 100px;
	background: #FAFAFA;

}
.profile__name, .profile__contact {
	text-align: left;
}
.profile__contact {
	text-align: left;
}
.profile__name h1, .profile__name h2, .profile__name ul {
	margin-top: 0;
	margin-bottom: 0;
}

.profile__head {
	padding: 8px 0;
	padding: 0.5rem 0;
    background: #EDEDED;
    border-bottom: #E5E5E5 3px solid;
    margin-bottom: 24px;
    margin-bottom: 1.5rem;
}
.profile__bio {
	text-align: left;
}
.profile__address, .profile__location {
	margin-bottom: 24rem;
	margin-bottom: 1.5rem;
}
</style>

{% endblock %}
{% block sidebar %}{% endblock %}