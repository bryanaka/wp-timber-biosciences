{% extends 'layout/base.twig' %}

{% block html_head %}
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/base-min.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/pure-min.css">
    <link rel="stylesheet" href="assets/libs/effeckt-captions.css">
{% endblock %}

{% block content %}
    <div id="onestop">
        <h3>Onestop</h3>
        <div id="sections">
            <div class="section">
                <a href="" class="onestop-link">
                    <div class="onestop-section">
                        <figure class="effeckt-caption" data-effect-type="cover-fade">
                            <div class="onestop-element">
                                <img src="{{TimberImage(post.get_field('image')).src}}" alt="">
                                <figcaption>
                                    <div class="effeckt-figcaption-wrap">
                                        {{post.content}}
                                    </div>
                                </figcaption>
                            </div>
                        </figure>
                        <p>{{post.title}}</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

{% endblock %}